# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_size = 4

# JavaScript files
[*.js]
indent_size = 2

# CSS files
[*.css]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false
